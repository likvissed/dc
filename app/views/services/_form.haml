.big-content{ "ng-controller": "ServiceEditCtrl", "ng-init": "init(#{@service.id || 0}, '#{params[:name]}')" }
  = simple_form_for @service, url: url do |s|
    -# , html: { "service-form": @service.id || 0, "service-name": params[:name] }

    .content-header
      = render partial: "service_header", locals: { s: s }

    .content-body
      -#= render partial: "files", locals: { s: s }
      .service-left-part
        = render partial: "service_table", locals: { s: s }
      .service-right-part
        = render partial: "right_part", locals: { s: s }

  = render partial: "network"
  = render partial: "ports"