.modal.fade#portsModal{ "tabindex": "-1", "role": "document", "aria-hidden": true, "modal-show": "service.flags.portModal" }
  .modal-dialog
    .modal-content{ "ng-controller": "ServiceEditPortCtrl as portsModal" }
      .modal-header
        %h4.modal-title.text-center= @service.name || "Имя не определено"
      .modal-body
        .form-group.string.optional
          = select_tag "service[service_networks][service_ports][][name]", nil, class: "form-control", "ng-model": "portsModal.network.selected",
            "ng-options": "network as network.value.dns_name for network in portsModal.network.values | filter: portsModal.networksFilter() track by network.value.dns_name", "ng-change": "portsModal.changeNetwork()"

        %table.center-header.table.table-bordered.table-ports
          %thead
            %tr
              %th
                %b Порты, доступные из ЛС
                -#%br
                -#= label_tag "service_service_networks__service_ports_local_disabled", class: "boolean optional" do
                  = check_box_tag "service[service_networks][][service_ports][local_disabled]", "1", false, class: "boolean optional", "ng-checked": "!(service.template_value[service.template_index].local_tcp_ports || service.template_value[service.template_index].local_udp_ports)", "ng-model": "service.tcpChecked"
                  Отсутствуют
              %th
                %b Порты, доступные из Интернет
                -#%br
                -#= label_tag "service_service_networks__service_ports_inet_disabled", class: "boolean optional" do
                  = check_box_tag "service[service_networks][][service_ports][inet_disabled]", "1", true, class: "boolean optional", "ng-checked": "!(service.template_value[service.template_index].inet_tcp_ports || service.template_value[service.template_index].inet_udp_ports)", "ng-model": "service.udpChecked"
                  Отсутствуют
            %tr
              %th{ colspan: 2 } TCP
          %tbody
            %tr
              %td.form-group.text.optional
                = text_area_tag "template_ports[portsModal.template_index][local_tcp_ports]", "template_ports[portsModal.template_index][local_tcp_ports]", "ng-model": "portsModal.template_value[portsModal.template_index].local_tcp_ports", class: "form-control text optional"

              %td.form-group.string.optional
                = text_area_tag "template_ports[portsModal.template_index][inet_tcp_ports]", "template_ports[portsModal.template_index][inet_tcp_ports]", "ng-model": "portsModal.template_value[portsModal.template_index].inet_tcp_ports", class: "form-control text optional"

          %thead
            %tr
              %th{ colspan: 2 } UDP
          %tbody
            %tr
              %td.form-group.string.optional
                = text_area_tag "template_ports[portsModal.template_index][local_udp_ports]", "template_ports[portsModal.template_index][local_udp_ports]", "ng-model": "portsModal.template_value[portsModal.template_index].local_udp_ports", class: "form-control text optional"
              %td.form-group.string.optional
                = text_area_tag "template_ports[portsModal.template_index][inet_udp_ports]", "template_ports[portsModal.template_index][inet_udp_ports]", "ng-model": "portsModal.template_value[portsModal.template_index].inet_udp_ports", class: "form-control text optional"

      .modal-footer
        = button_tag "Готово", class: "btn-success", "ng-click": "portsModal.readyPortsModal()"
        = button_tag "Отмена", class: "btn-default", "ng-click": "portsModal.closePortsModal()"