.panel.panel-default
  .panel-heading
    %table.internal-table
      %tr
        %td
          Хостинг сервиса
        %td.min-td
          = icon("fa fa-plus-circle fa-lg", title: "Добавить хостинг", class: "test")
  .panel-body
    %table.internal-table
      %tr
        %td
          Хостинг 1
        %td.min-td
