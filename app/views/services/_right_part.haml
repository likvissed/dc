.panel.panel-default
  .panel-heading
    %table.internal-table
      %tr
        %td
          Зависимости сервиса
        %td.min-td
          = icon("fa fa-plus-circle fa-lg", title: "Добавить зависимость", class: "test", "ng-click": "addParent()")
  .panel-body
    %table.internal-table
      %tr{ "ng-repeat": "parent in parents" }
        %td
          .form-group.string.optional.service_parents
            = select_tag "service[parents_attributes][{{ $index }}][parent_id]", nil, class: "form-control", "ng-model": "selected_parent", "ng-options": "service.name for service in services track by service.id"
            = hidden_field_tag "service[parents_attributes][{{ $index }}][id]", "{{ parent.id }}"
            = hidden_field_tag "service[parents_attributes][{{ $index }}][_destroy]", "{{ parent.destroy }}"

          -#= s.association :parents, label_method: :name, value_method: :id, label: false, include_blank: false, input_html: { multiple: false }
        %td.min-td
          = icon("fa fa-minus-circle fa-lg", title: "Удалить зависимость")
      %tr.empty
      -#%tr
        %td
          = s.association :parents, label_method: :name, value_method: :id, label: false, include_blank: false, input_html: { multiple: false }
        %td.min-td
          = icon("fa fa-minus-circle fa-lg", title: "Удалить зависимость")

