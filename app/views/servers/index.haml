= title "Просмотр оборудования"

.container
  -#.row
    .col-sm-12.col-md-12.col-lg-8
      .well
        .content-body{ "ng-controller": "ServerTotalInfoCtrl as serverlnfo" }
          = render partial: "info"
  .row
    - ident_class = can?(:read, ServerType) ? "" : "col-lg-offset-2"
    .col-lg-8{ class: "#{ident_class}" }
      .well
        .content-body{ "ng-controller": "ServerIndexCtrl as serverPage" }
          %datatable-wrapper
            %table.table.center-header.table-hover.table-striped{ datatable: "", "dt-options": "serverPage.dtOptions", "dt-columns": "serverPage.dtColumns", "dt-instance": "serverPage.dtInstance", width: "100%" }

          = render partial: "preview"

    - if can? :read, ServerType
      .col-lg-4
        .well
          .content-body{ "ng-controller": "ServerTypeIndexCtrl as serverType" }
            %datatable-wrapper
              %table.table.center-header.table-hover.table-striped{ datatable: "", "dt-options": "serverType.dtOptions", "dt-columns": "serverType.dtColumns", "dt-instance": "serverType.dtInstance", width: "100%" }

            = render partial: "server_types/preview"