.navbar.navbar-default{ role: "navigation-main" }
  .container
    .navbar-header
      = button_tag "", class: "navbar-toggle", "data-toggle": "collapse", "data-target": ".navbar-collapse-main" do
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

    .collapse.navbar-collapse.navbar-collapse-main
      %ul.nav.navbar-nav
        %li.dropdown
          = link_to "Сервисы", services_path, class: "#{'corp-color' if [services_path, root_path].include? request |
          .env['PATH_INFO'] }" |
        %li
          = link_to "Серверы", clusters_path, class: "#{'corp-color' if current_page? clusters_path}"
        %li
          = link_to "Оборудование", servers_path, class: "#{'corp-color' if current_page? servers_path}"
        %li
          = link_to "Комплектующие", server_parts_path, class: "#{'corp-color' if current_page? server_parts_path}"

      %ul.nav.navbar-nav.pull-right
        %li.dropdown
          = link_to "#", class: "dropdown-toggle, #{'corp-color' if [contacts_path, main_settings_path, users_path] |
          .include? request.env['PATH_INFO']}", "data-toggle": "dropdown" do |
            Администрирование
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to "Контакты", contacts_path, class: "#{'corp-color' if current_page? contacts_path}"
            %li
              = link_to "Основные настройки", main_settings_path, class: "#{'corp-color' if current_page? |
              main_settings_path}" |
            %li{ role: "separator", class: "divider" }
            %li
              = link_to "Пользователи", users_path, class: "#{'corp-color' if current_page? users_path}"