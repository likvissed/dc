.navbar.navbar-inverse{ role: "navigation-top" }
  .container
    .row
      .col-md-8.col-md-offset-2
        .navbar-header
          = button_tag "", class: "navbar-toggle", "data-toggle": "collapse", "data-target": ".navbar-collapse-head" do
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          = image_tag("Logo.png")
          = "Пользователь #{current_user.username}"
        .collapse.navbar-collapse.navbar-collapse-head
          .navbar-text.pull-right
            = link_to "Выход", destroy_user_session_path, method: :delete, class: "navbar-link"

.navbar.navbar-default{ role: "navigation-main" }
  .container
    .navbar-header
      = button_tag "", class: "navbar-toggle", "data-toggle": "collapse", "data-target": ".navbar-collapse-main" do
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

    .collapse.navbar-collapse.navbar-collapse-main
      %ul.nav.navbar-nav
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do
            Сервисы
            %b.caret
          %ul.dropdown-menu{ "data-dropdown-in": "fadeIn", "data-dropdown-out": "fadeOut" }
            %li
              = link_to "Просмотр", services_path
            %li
              = link_to "Контакты", contacts_path
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do
            Серверы
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to "Просмотр", clusters_path
            %li
              = link_to "Типы серверов", node_roles_path
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do
            Оборудование
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to "Просмотр", servers_path
            %li
              = link_to "Типы оборудования", server_types_path
            %li
              = link_to "Комплектующие", server_parts_path
            %li
              = link_to "Типы комплектующих", detail_types_path
      -#%li.dropdown
          = link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do
            Зип
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to "Просмотр", "#"
            %li
              = link_to "Добавить", "#"
      %ul.nav.navbar-nav.pull-right
        %p.navbar-text= yield(:title)
        - if current_user.has_role? :admin
          %li.dropdown
            = link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do
              Администрирование
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Пользователи", users_path
              %li
                = link_to "Роли", "#"